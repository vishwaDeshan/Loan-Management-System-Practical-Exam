@model IEnumerable<LoanManagementSystemAssignment.Models.LoanApplication>

@{
    ViewData["Title"] = "Loan Applications Dashboard";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-12">
            <p>
                <a asp-action="Add" class="btn btn-primary">Add New Loan Application</a>
            </p>
            @if (Model.Any())
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th>NIC/Passport</th>
                            <th>Loan Type</th>
                            <th>Interest Rate (%)</th>
                            <th>Loan Amount</th>
                            <th>Duration (Months)</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var loan in Model)
                        {
                            <tr>
                                <td>@loan.CustomerName</td>
                                <td>@loan.NicPassport</td>
                                <td>@loan.LoanType</td>
                                <td>@loan.InterestRate</td>
                                <td>@String.Format("Rs. {0:N2}", loan.LoanAmount)</td>
                                <td>@loan.DurationMonths</td>
                                <td>
                                    @if (loan.Status.Equals("Approved"))
                                    {
                                        <span class="badge badge-approved">Approved</span>
                                    }
                                    else if (loan.Status.Equals("Rejected"))
                                    {
                                        <span class="badge badge-rejected">Rejected</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-new">New</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No loan applications found.</p>
            }
        </div>
    </div>
</div>
